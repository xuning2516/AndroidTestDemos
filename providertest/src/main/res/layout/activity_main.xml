<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.royole.providertest.MainActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Hello World!" />
    <Button
        android:id="@+id/create_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hello"
        android:text="Create Table"
        android:textAllCaps="false"
        android:visibility="gone"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/add_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_table"
        android:text="Add Data"
        android:textAllCaps="false"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/update_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_table"
        android:layout_toRightOf="@id/add_data"
        android:text="Update Data"
        android:textAllCaps="false"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/delete_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_data"
        android:text="Delete Data"
        android:textAllCaps="false"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/query_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_data"
        android:layout_toRightOf="@id/delete_data"
        android:text="query Data"
        android:textAllCaps="false"
        android:onClick="onClick"/>
    <TextView
        android:id="@+id/showContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="25"
        android:scrollbars="vertical"
        android:layout_below="@id/delete_data"/>
</RelativeLayout>
